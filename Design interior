        <div class="modal-content service-modal-content">
            <span class="close-button" id="close-service-modal">&times;</span>
            <h3 id="modal-service-title" class="text-2xl font-bold text-gray-800 mb-4"></h3>
            <img id="modal-service-image" src="" alt="Service Image" class="w-full max-w-md h-auto object-cover mb-4 rounded-lg">
            <p id="modal-service-description" class="text-gray-700 leading-relaxed"></p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');
            const closeIcon = document.getElementById('close-icon');
            const mobileMenuLinks = mobileMenu.querySelectorAll('a');

            const projectModal = document.getElementById('project-modal');
            const closeModalButton = projectModal.querySelector('.close-button');
            const modalProjectTitle = document.getElementById('modal-project-title');
            const modalGalleryContainer = document.getElementById('modal-gallery-container');
            const viewProjectButtons = document.querySelectorAll('.view-project-btn');

            const serviceModal = document.getElementById('service-modal');
            const closeServiceModalButton = document.getElementById('close-service-modal');
            const modalServiceTitle = document.getElementById('modal-service-title');
            const modalServiceImage = document.getElementById('modal-service-image');
            const modalServiceDescription = document.getElementById('modal-service-description');
            const viewServiceButtons = document.querySelectorAll('.view-service-btn');

            
            function toggleMobileMenu() {
                mobileMenu.classList.toggle('hidden');
                menuIcon.classList.toggle('hidden');
                closeIcon.classList.toggle('hidden');
            }

            mobileMenuButton.addEventListener('click', toggleMobileMenu);

            mobileMenuLinks.forEach(link => {
                link.addEventListener('click', toggleMobileMenu);
            });

            
            const projectImages = {
                "modern-living-room": [
                    "modern1.jpg",
                    "modern2.jpg",
                    "modern3.jpg",
                    "modern4.jpg",
                    "modern5.jpg",
                    
                ],
                "cozy-bedroom-retreat": [
                    "cozy1.jpg",
                    "cozy2.jpg",
                    "cozy3.jpg",
                    "cozy4.jpg",
                    "cozy5.jpg",
                ],
                "stylish-kitchen-design": [
                    "kitchen1.jpg",
                    "kitchen2.jpg",
                    "kitchen3.jpg",
                    "kitchen4.jpg",
                    "kitchen5.jpg",

                ],
                "elegant-dining-area": [
                    "area1.jpg",
                    "area2.jpg",
                    "area3.jpg",
                    "area4.jpg",
                    "area5.jpg",
                    
                ],
                "productive-home-office": [
                    "home1.jpg",
                    "home2.jpg",
                    "home3.jpg",
                    "home4.jpg",
                    "home5.jpg",
  
                ],
                "vibrant-kids-room": [
                    "kidroom1.jpg",
                    "kidroom2.jpg",
                    "kidroom3.jpg",
                    "kidroom4.jpg",
                    "kidroom5.jpg",


                ]
            };

            // --- Service Details Data ---
            const serviceDetails = {
                "residential-design": {
                    title: "Residential Design",
                    description: "Crafting beautiful and functional living spaces that reflect your personal style and comfort. We focus on creating harmonious interiors that enhance your daily life, from concept to completion.",
                    image: "residental.jpg"
                },
                "commercial-design": {
                    title: "Commercial Design",
                    description: "Designing inspiring and productive environments for businesses, offices, and retail spaces. Our commercial designs prioritize functionality, brand identity, and employee well-being.",
                    image: "commercial.jpg"
                },
                "space-planning": {
                    title: "Space Planning",
                    description: "Optimizing layouts and flow to maximize usability and aesthetic appeal in any space. We analyze your needs to create efficient and comfortable arrangements.",
                    image: "SpacePlanning.jpg"
                },
                "color-consultation": {
                    title: "Color Consultation",
                    description: "Expert guidance on color palettes to create the perfect mood and harmony in your interiors. We help you choose colors that reflect your personality and enhance your space.",
                    image: "colour paint.jpg"
                },
                "furniture-decor-selection": {
                    title: "Furniture & Decor Selection",
                    description: "Curating the ideal furniture, lighting, and decor to complete your design vision. We source unique pieces that align with your style and budget.",
                    image: "furniture.jpg"
                },
                "3d-visualization": {
                    title: "3D Visualization",
                    description: "Providing realistic 3D renderings to help you visualize your future space before execution. See your design come to life with detailed virtual tours.",
                    image: "3d 1.jpg"
                }
            };

            
            viewProjectButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const projectId = this.dataset.projectId;
                    const projectTitle = this.closest('.p-6').querySelector('h3').textContent;
                    const images = projectImages[projectId];

                    modalProjectTitle.textContent = projectTitle;
                    modalGalleryContainer.innerHTML = ''; // Clear previous images

                    if (images) {
                        images.forEach(imageUrl => {
                            const imgElement = document.createElement('img');
                            imgElement.src = imageUrl;
                            imgElement.alt = projectTitle + " project image";
                            imgElement.onerror = function() { this.src = 'https://placehold.co/200x150/CCCCCC/333333?text=Image+Error'; };
                            modalGalleryContainer.appendChild(imgElement);
                        });
                    } else {
                        modalGalleryContainer.innerHTML = '<p class="text-gray-600 text-center col-span-full">No additional images available for this project.</p>';
                    }

                    projectModal.style.display = 'flex'; 
                });
            });

            closeModalButton.addEventListener('click', function() {
                projectModal.style.display = 'none'; 
            });

            
            viewServiceButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const serviceId = this.dataset.serviceId;
                    const service = serviceDetails[serviceId];

                    if (service) {
                        modalServiceTitle.textContent = service.title;
                        modalServiceImage.src = service.image;
                        modalServiceImage.alt = service.title + " image";
                        modalServiceImage.onerror = function() { this.src = 'https://placehold.co/400x250/CCCCCC/333333?text=Image+Error'; };
                        modalServiceDescription.textContent = service.description;
                        serviceModal.style.display = 'flex'; 
                    } else {
                        
                        console.error("Service details not found for ID:", serviceId);
                    }
                });
            });

            closeServiceModalButton.addEventListener('click', function() {
                serviceModal.style.display = 'none'; 
            });

            window.addEventListener('click', function(event) {
                if (event.target == projectModal) {
                    projectModal.style.display = 'none';
                }
                if (event.target == serviceModal) {
                    serviceModal.style.display = 'none';
                }
            });
        });
    </script>
</body>
